<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.doodle.mapper.UserMapper">

    <!-- 회원가입  -->
    <insert id="signup">
        INSERT INTO users(username, nickname, email, userid, userpw) VALUES(#{username}, #{nickname},#{email},#{userid},#{userpw} )
    </insert>



    <select id="getUserById" parameterType="String" resultMap="userMap">
        SELECT * FROM users
        WHERE userid = #{userid}
    </select>

    <select id="findAll" resultType="HashMap">
        select * from users
    </select>

</mapper>