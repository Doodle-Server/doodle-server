        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.challenge1.mapper.UserMapper">

    <!-- 회원가입  -->
    <insert id="signup">
        INSERT INTO users(username, nickname, email, userid, userpw) VALUES(#{username}, #{nickname},#{email},#{userid},#{userpw} )
    </insert>


